alias a {
  var %msg $2-
  var %n = $gettok(%msg,0,32) 
  var %z = 1
  while %msg {
    if $len($remove($gettok(%msg,$+(1-,%n),32),$chr(3))) <= 67 { 
      msgt $1 $replace($gettok(%msg,$+(1-,%n),32),$chr(59),$chr(44))
      var %msg = $deltok(%msg,$+(1-,%n),32) 
      var %n = $gettok(%msg,0,32) 
      inc %z 
    }
    else { dec %n }
  }
}

