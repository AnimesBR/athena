    if $2 isnum { return 14 $+ $remove($1,$chr(58)) $+ %cor $+ $chr(58) $+  $+ $2 }
    if $2 == nada { return 14 $+ $remove($1,$chr(58)) $+ %cor $+ $chr(58) }
  }
  else {
