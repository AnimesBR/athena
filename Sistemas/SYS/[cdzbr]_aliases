  var %c3 01
  var %c4  $+ %c $+ , $+ 05
  var %len = $calc((68 - $len($strip($1-))) / 2)
  var %len2 = $calc((72 - $len($strip($1-))) / 2)
  msg =$nick 14,1 $str($chr(160),72) 
