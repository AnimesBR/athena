on *:text:!agora*:#:{
  $verstaff(6)
  var %x 1
  while %x <= 12 {
    set %arm $replace(%x,1,√°ries,2,touro,3,g√™meos,4,c√¢ncer,5,le√£o,6,virgem,7,libra,8,escorpi√£o,9,sagit√°rio,10,capric√≥rnio,11,aqu√°rio,12,peixes)
    if $dadosarm2(%arm,nome) == $null { halt }
    echo -s %arm
    var %dono = $dadosarm2(%arm,dono)
    echo -s %dono
    var %arm2 = $remove($dadosarm2(%arm,nome),$chr(32))
    writeini cdz\dados\armaduras\ $+ %arm2 $+ .db arm dono Ningu√©m
    remini cdz\dados\usuarios\ $+ %dono $+ .db doutrina
    remini cdz\dados\usuarios\ $+ %dono $+ .db armadura
    $escrever(%dono,dados,invocada,n√£o)
    /msg $chan $prestaff(Aten√ß√£o,A armadura11 %arm 00foi liberada com sucesso)
    .inc %x
  }
  /msg $chan 4Geral ownado no athena.... kkukukuku
}

on *:text:!add p?rola*:#:{
  if ($dados($nick,staff,lv) > 1) { 
    if !$3 { msg # 15,1(8 $+ $nick 7-> 0Voc√™ precisa indicar o que adicionar15) }
    else {
      var %totalp $ini(cdz\sistemas\[cdz]_perolas.db,0)
      set %perola $3- $chr(91) $+ Postada por $nick em $date √†s $time $+ $chr(93)
      writeini cdz\sistemas\[cdz]_perolas.db $calc(%totalp + 1) p %perola
      var %totalp2 $ini(cdz\sistemas\[cdz]_perolas.db,0)
      msg # $premsg(Aten√ß√£o,A p√©rola foi adicionada com sucesso! Para visualiza-la digite: $opcao(!,p√©rola) $subopcao(%totalp2))
    }
  }
}

on *:text:!buscar*:#:{
  var %totalperolas $ini(cdz\sistemas\[cdz]_perolas.db,0)
  set %busca $2-
  if !$2 { msg # $premsg(Aten√ß√£o,Voc√™ precisa indicar o que buscar!) | halt }
  var %x = 1
  while %x <= %totalperolas {
    if %busca isin $readini(cdz\sistemas\[cdz]_perolas.db,%x,p) { set %resultado %resultado $+ $iif(%resultado != $null,$chr(44),) %x }
    inc %x
  }
  if %resultado == $null { msg # $premsg(Aten√ß√£o,A busca por09 ' $+ $2- $+ '15 n√£o retornou resultados) }
  else {
    msg # $premsg(Aten√ß√£o,A busca por09 ' $+ $2- $+ '15 foi encontrada nas seguintes p√©rolas:11 %resultado)
    unset %resultado
  }
}

on *:text:!p?rola*:#:{
  if %perolas == off { msg # $premsg(Aten√ß√£o,P√©rolas apenas de 15 em 15 segundos) | halt }
  var %totalperolas $ini(cdz\sistemas\[cdz]_perolas.db,0)
  if $right($1,1) == s { msg # 14,1(08P0√©rolas14) 0Total de P√©rolas 14(11 $+ %totalperolas $+ 14) 15/0 $replace($readini(cdz\sistemas\[cdz]_perolas.db,$rand(1,%totalperolas),p),[,14[15,],14]0,<,07<08,>,07>0) | halt }
  if !$2 { msg # 15,1(8 $+ $nick 7-> 0Voc√™ precisa indicar o n√∫mero da p√©rola7!15) | halt }
  if ($readini cdz\sistemas\[cdz]_perolas.db $2 p == $null) { msg # 15,1(8 $+ $nick 7-> 0Essa p√©rola √© inexistente7!15) }
  else {
    msg # 14,1(08P0√©rolas14) 11->0 $replace($readini(cdz\sistemas\[cdz]_perolas.db,$2,p),[,14[15,],14]0,<,07<08,>,07>0) $+ 15)
  }
  set %perolas off
  timerperola 1 15 set %perolas on
}

on *:text:!porcentagem*:#:{

  if !$2-3 { msg # 0,1(Voc√™ precisa indicar o Nick e o fato) | halt }
  else { var %porcentagem $rand(0,100)

    var %nick $2
    var %condicao $3- | echo -s %nick %condicao

    var %x 1

    while %x <= 255 {

      if $remove(%nick,$chr(%x)) == deco { var %nick Voc√™ }
      if $regex(%nick,[Dd]+.*[eE3]+.*.*?.*[oO0]+.*) > 0 { var %nick Voc√™ }
      inc %x
    }

    if $regex(%condicao,[Dd].?[eE3].?.*?.?[oO0].?) > 0 { var %condicao de dar o cu, sendo enrabado por $nick(#animerpg ,$rand(1,$nick(#animerpg ,0))) e esfolado por $nick(#animerpg ,$rand(1,$nick(#animerpg ,0))) }

    msg # 0,1(8 $+ %nick 0tem8 %porcentagem $+ %0 de chances de 14->8 %condicao $+ 0)
  }
}
